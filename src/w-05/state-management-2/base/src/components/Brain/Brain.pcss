.brain {
    opacity: 0.5;
    width: 100%;
    height: 100%;
    background: url("./assets/brain.png") no-repeat center;
    position: absolute;
    animation: appChangeColor 7s ease-in-out infinite;
}

@keyframes appChangeColor {
    0%{transform: scale(1) rotate(0deg);}
    51%{transform: scale(0.25) rotate(180deg);}
    100%{transform: scale(1) rotate(360deg);}
}


.brainFlying {
    pointer-events: none;
    position: absolute;
    top: 0;
    opacity: 0.5;
}